{
  "name": "packsize",
  "version": "0.2.0",
  "description": "package size control on a monorepo",
  "scripts": {
    "dev": "node -r esbuild-register ./__tests__/dev.ts",
    "lint": "eslint --quiet",
    "build": "esbuild ./src/cli --outfile=./dist/packsize.js --bundle --platform=node --packages=external --target=es6",
    "verify": "yarn run lint && yarn run build"
  },
  "bin": "dist/packsize.js",
  "type": "module",
  "engines": {
    "node": "^18"
  },
  "files": [
    "src",
    "bin.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rake7h/packsize.git"
  },
  "author": "rakesh <rake7h@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rake7h/packsize/issues"
  },
  "homepage": "https://github.com/rake7h/packsize#readme",
  "dependencies": {
    "@npmcli/arborist": "^5.6.0",
    "byte-size": "^8.1.0",
    "chalk": "^5.3.0",
    "cosmiconfig": "^9.0.0",
    "fs-extra": "^11.2.0",
    "gzip-size": "^6.0.0",
    "jsondiffpatch": "^0.6.0",
    "meow": "^9.0.0",
    "npm-packlist": "^7.0.4",
    "object-hash": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.10",
    "dotenv": "^16.0.3",
    "esbuild": "^0.20.0",
    "esbuild-register": "^3.5.0",
    "eslint": "^8.0.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-promise": "^6.0.0",
    "fast-glob": "^3.3.2",
    "type-fest": "^4.10.2",
    "typescript": "^5.3.3"
  },
  "packageManager": "yarn@4.1.0"
}
